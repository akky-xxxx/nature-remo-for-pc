  "productName": "NatureRemoForPc",
  "scripts": {
    "clean": "rimraf dist main src/renderer/out src/renderer/.next  src/renderer/out",
    "dev": "yarn build-electron && electron .",
    "build-renderer": "next build src/renderer && next export src/renderer",
    "build-electron": "tsc -p src/electron",
    "build": "yarn build-renderer && yarn build-electron",
    "pack-app": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "type-check": "tsc"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "next": "latest",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
